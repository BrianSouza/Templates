<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Templates.App">
    <Application.Resources>
        <!--Font-->
        <OnPlatform x:Key="MaterialFont" x:TypeArguments="x:String">
            <On Platform="iOS" Value="Material Design Icons" />
            <On Platform="Android" Value="materialdesignicons.ttf#Material Design Icons" />
        </OnPlatform>
        <!--Icon-->
        <x:String x:Key="Email">&#xF1EE;</x:String>
        <x:String x:Key="Key">&#xF30B;</x:String>
        
        <!--Label-->
        <Style x:Key="lblImages" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource MaterialFont}"/>
        </Style>
    </Application.Resources>
</Application>